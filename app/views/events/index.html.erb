<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Event image</th>
      <th>Venue</th>
      <th>Address</th>
      <th>Location lati</th>
      <th>Location long</th>
      <th>Category</th>
      <th>Subcategories</th>
      <th>Cost</th>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= image_tag event.event_image, height: "30px", width: "50px" %></td>
        <td><%= event.venue %></td>
        <td><%= event.address %></td>
        <td><%= event.location_lati %></td>
        <td><%= event.location_long %></td>
        <td><%= event.category %></td>
        <td><%= event.subcategories %></td>
        <td><%= event.cost %></td>
        <td><%= event.date %></td>
        <td><%= event.time %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

